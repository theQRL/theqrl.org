{
	"name": "qrl",
	"version": "v1.0.0",
	"scripts": {
		"scss": "node-sass -w --include-path sass sass/style.scss style.css --source-map=true --output-style=expanded --indent-type=tab --indent-width=1",
		"autoprefixer": "postcss style.css -u autoprefixer -o style.css --no-map",
		"stylelint": "stylelint 'style.css'",
		"stylefix": "stylelint 'style.css' --fix"
	},
	"devDependencies": {
		"autoprefixer": "^7.1.1",
		"browserslist": "^2.1.5",
		"node-sass": "^4.7.2",
		"angled-edges": "^2.0.0",
		"postcss-cli": "^4.1.0",
		"stylelint": "^7.12.0"
	},
	"stylelint": {
		"defaultSeverity": "warning",
		"extends": "stylelint-config-wordpress"
	},
	"browserslist": [
		"last 2 versions"
	]
}
